@model SubscriptionsModel
<div class="form">
    <div class="form-col-12">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "Edit", autocomplete = "off", autocapitalize = "off" }))
        {
            @Html.AntiForgeryToken();
            @Html.HiddenFor(x => x.EventId)
            <section>
                <div>@Html.LabelFor(x => x.EventId)</div>
                <div>
                    @Html.DropDownListFor(x => x.EventId, Helper.GetEvents(), "--", new { @class = "form-control", disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.EventId)
                </div>
            </section>
            <section>
                <div>@Html.LabelFor(model => model.UserIds)</div>
                <div>
                    @Html.ListBoxFor(model => model.UserIds, Helper.GetUsers(), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.UserIds)
                </div>
            </section>
            <hr />
            <section>
                <button class="btn btn-primary pull-right" type="submit">Save</button>
                <a href="@Url.Action("List")" class="btn btn-default">Back To List</a>
            </section>
        }
    </div>
</div>
