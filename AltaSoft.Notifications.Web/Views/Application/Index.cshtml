<div class="projects">
    @foreach (var item in Model)
    {
        <div class="item">
            <div>
                <img class="logo" src="@item.ImageUrl" />
            </div>
            <h2>@item.Name</h2>
            <hr />
            <h4>@item.Description</h4>
            <br />
            <table class="table table-striped">
                <tr>
                    <td>@item.RegDate.ToString("MMM dd, yyyy")</td>
                </tr>
                <tr>
                    <td>@item.EmailFromAddress</td>
                </tr>
                <tr>
                    <td>@item.EmailFromFullName</td>
                </tr>
            </table>
            @if (item.IsTestMode)
            {
                <div class="alert alert-info">
                    Development
                </div>
            }
            else
            {
                <div class="alert alert-success">
                    Production
                </div>
            }
        </div>
    }
</div>
